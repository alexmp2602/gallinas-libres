---
const year = new Date().getFullYear();
---

<footer
  id="footer"
  role="contentinfo"
  class="w-full px-4 py-6 text-center text-sm text-neutral-500
         opacity-0 translate-y-6 transition-[opacity,transform] duration-700 ease-out will-change-transform
         border-t border-neutral-200"
>
  © {year} Gallinas Libres — Todos los derechos reservados

  <script is:inline>
    (() => {
      const el = document.getElementById("footer");
      if (!el) return;

      const show = () => {
        el.style.opacity = "1";
        el.style.transform = "translateY(0)";
      };

      // Respeta reduced motion
      if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
        show();
        return;
      }

      // Si ya está visible, revelar; si no, usar IO
      const rect = el.getBoundingClientRect();
      if (rect.top < innerHeight && rect.bottom > 0) {
        show();
        return;
      }

      const io = new IntersectionObserver(
        (entries) => {
          if (entries.some((e) => e.isIntersecting)) {
            show();
            io.disconnect();
          }
        },
        { root: null, rootMargin: "0px 0px -10% 0px", threshold: 0.01 }
      );
      io.observe(el);
    })();
  </script>
</footer>

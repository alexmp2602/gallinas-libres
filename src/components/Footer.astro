---
const year = new Date().getFullYear();
---

<footer
  id="footer"
  class="container py-6 text-center text-sm text-neutral-500 opacity-0 translate-y-6 will-change-transform"
>
  © {year} Gallinas Libres — Todos los derechos reservados

  <script is:inline>
    import("https://cdn.skypack.dev/motion").then(({ animate, inView }) => {
      const footer = document.getElementById("footer");
      if (!footer) return;

      inView(footer, () => {
        animate(
          footer,
          { opacity: [0, 1], y: [30, 0] },
          { duration: 0.8, easing: "cubic-bezier(0.4, 0, 0.2, 1)" }
        );
      });
    });
  </script>
</footer>

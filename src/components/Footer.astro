---
const year = new Date().getFullYear();
---

<footer
  id="footer"
  class="container py-6 text-center text-sm text-neutral-500 transform transition duration-700 ease-out js:opacity-0 js:translate-y-6"
>
  © {year} Gallinas Libres — Todos los derechos reservados

  <script is:inline>
    const footer = document.getElementById("footer");
    if (footer) {
      const observer = new IntersectionObserver(
        ([entry]) => {
          if (entry.isIntersecting) {
            footer.classList.remove("opacity-0", "translate-y-6");
            footer.classList.add("opacity-100", "translate-y-0");
            observer.disconnect();
          }
        },
        { threshold: 0.1 }
      );
      observer.observe(footer);
    }
  </script>
</footer>

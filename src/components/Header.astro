---
import MenuMobile from "../components/MenuMobile.astro";
---

<header
  class="sticky top-0 z-50 w-full bg-white shadow transition-colors duration-300"
>
  <div class="mx-auto flex items-center justify-between p-4 lg:px-16">
    <a href="/" aria-label="Ir a inicio" class="block group">
      <img
        src="/img/logo/logo_2-1_transparente.png"
        alt="Gallinas Libres - Logo"
        class="h-12 md:h-14 object-contain transition-transform duration-200 group-hover:scale-[1.03] active:scale-95"
        decoding="async"
        fetchpriority="low"
      />
    </a>

    <nav class="hidden md:flex items-center gap-8 font-medium text-neutral-900">
      <a href="#nosotros" class="hover:text-orange-900">Nosotros</a>
      <a href="#produccion" class="hover:text-orange-900">Producción</a>
      <a href="#contacto" class="hover:text-orange-900">Contacto</a>
      <a href="#ubicacion" class="hover:text-orange-900">Ubicación</a>
    </nav>

    <MenuMobile />
  </div>
</header>

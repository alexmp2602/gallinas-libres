---
import MenuMobile from "../components/MenuMobile";
import { motion } from "motion/react";
---

<header
  class="sticky top-0 z-50 flex items-center justify-between p-4 lg:px-16 bg-white/90 backdrop-blur-md shadow transition-colors duration-300"
>
  <!-- Logo con microinteracción Motion for React -->
  <motion.a
    href="/"
    aria-label="Ir a inicio"
    whileHover={{ scale: 1.05 }}
    whileTap={{ scale: 0.95 }}
    class="block"
  >
    <img
      src="/img/logo/logo_2-1_transparente.png"
      alt="Gallinas Libres - Logo"
      class="h-12 md:h-14 transition-transform duration-300 ease-in-out"
      loading="lazy"
    />
  </motion.a>

  <!-- Desktop Nav -->
  <nav class="hidden md:flex space-x-8 font-medium text-neutral-800">
    <a
      href="#nosotros"
      class="hover:text-orange-600 transition-colors duration-300">Nosotros</a
    >
    <a
      href="#produccion"
      class="hover:text-orange-600 transition-colors duration-300">Producción</a
    >
    <a
      href="#contacto"
      class="hover:text-orange-600 transition-colors duration-300">Contacto</a
    >
    <a
      href="#ubicacion"
      class="hover:text-orange-600 transition-colors duration-300">Ubicación</a
    >
  </nav>

  <!-- Mobile Menu (isla React) -->
  <MenuMobile client:load />
</header>

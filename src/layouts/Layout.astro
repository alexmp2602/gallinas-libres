---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title = "Gallinas Libres" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="color-scheme" content="light" />
    <title>{title}</title>

    <!-- SEO -->
    <meta
      name="description"
      content="Gallinas Libres - Huevos frescos de gallinas felices y libres, promoviendo bienestar animal y alimentación sana."
    />
    <meta name="theme-color" content="#f97316" />

    <!-- OG / Twitter -->
    <meta property="og:title" content="Gallinas Libres" />
    <meta
      property="og:description"
      content="Huevos frescos de gallinas felices, cuidando el bienestar animal y garantizando calidad en cada entrega."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.gallinaslibres.com/" />
    <meta property="og:image" content="/icons/icon_512.png" />
    <meta property="og:locale" content="es_AR" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Gallinas Libres" />
    <meta
      name="twitter:description"
      content="Huevos frescos de gallinas felices y libres, promoviendo bienestar animal y alimentación sana."
    />
    <meta name="twitter:image" content="/icons/icon_512.png" />

    <!-- PWA -->
    <link rel="icon" href="/icons/icon_192.png" sizes="192x192" />
    <link rel="apple-touch-icon" href="/icons/icon_512.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- CLS guard: vh estable -->
    <script is:inline>
      const vh =
        (window.visualViewport ? visualViewport.height : innerHeight) * 0.01;
      document.documentElement.style.setProperty("--vh", vh + "px");
    </script>

    <!-- Habilitar animaciones condicionalmente -->
    <script is:inline>
      document.documentElement.classList.add("js");
    </script>

    <!-- Slot para preloads/meta por página (ej: LCP) -->
    <slot name="head" />
  </head>

  <body class="min-h-screen antialiased">
    <Header />
    <main id="content" role="main" tabindex="-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title = "Gallinas Libres" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO Básico -->
    <meta
      name="description"
      content="Gallinas Libres - Huevos frescos de gallinas felices y libres, promoviendo bienestar animal y alimentación sana."
    />
    <meta name="theme-color" content="#f97316" />

    <!-- Open Graph -->
    <meta property="og:title" content="Gallinas Libres" />
    <meta
      property="og:description"
      content="Huevos frescos de gallinas felices, cuidando el bienestar animal y garantizando calidad en cada entrega."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.gallinaslibres.com/" />
    <meta property="og:image" content="/icons/icon_512.png" />
    <meta property="og:locale" content="es_AR" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Gallinas Libres" />
    <meta
      name="twitter:description"
      content="Huevos frescos de gallinas felices y libres, promoviendo bienestar animal y alimentación sana."
    />
    <meta name="twitter:image" content="/icons/icon_512.png" />

    <!-- PWA -->
    <link rel="icon" href="/icons/icon_192.png" sizes="192x192" />
    <link rel="apple-touch-icon" href="/icons/icon_512.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Mobile App Capable -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <!-- Enable Animations Conditionally -->
    <script>
      document.documentElement.classList.add("js");
    </script>
  </head>

  <body>
    <Header />
    <main id="content" role="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
